<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pagercontainer="http://schemas.android.com/apk/res/me.fantouch.demo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <me.fantouch.libs.multiviewpager.PagerContainer
        android:id="@+id/pager_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        pagercontainer:page_height="@dimen/pagerHeight"
        pagercontainer:page_margin="10dp"
        pagercontainer:page_width="@dimen/pagerWidth" >
    </me.fantouch.libs.multiviewpager.PagerContainer>

</RelativeLayout>